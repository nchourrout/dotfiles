# Easier navigation: .., ..., ...., ....., --
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Allow formatting as json
alias json_formatter="python -mjson.tool"

# Git
alias gs="git status"
alias gaa="git add --all"
alias ls="ls -FGal"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
